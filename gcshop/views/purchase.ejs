<!-- 201935222 김민석 -->
<% if (classes == '01') { %>
    <form action="/purchase/search" method="post">
        <input type="hidden" name="id" value="<%=id%>" />
        <input type="text" name="search" placeholder="아이디 입력">
        <button type="submit">검색</button>
    </form>
<% } %>

<table class="table table-bordered border-primary">
    <thead>
        <% if (classes =='01'){  %>
            <td>id</td>
        <% }  %>
        <td>상품</td>
        <td>상품명</td>
        <td>단가</td>
        <td>구매량</td>
        <td>총금액</td>
        <td>구매일</td>
        <td>취소여부</td>
    </thead>
    
    <% var i=0; while (i < list.length) { %>
    <tr>
        <% if (classes =='01'){  %>
        <td>
            <%= list[i].loginid %>
        </td>
        <% }  %>
        <td>
            <img src="<%=list[i].image%>" alt="<%=list[i].name%>">
        </td>
        <td>
            <%=list[i].name%>
        </td>
        <td>
            <%=list[i].price%>
        </td>
        <td>
            <%=list[i].qty%>
        </td>
        <td>
            <%=list[i].total%>
        </td>
        <td>
            <%=list[i].date%>
        </td>
        <td>
            <% if (list[i].cancel === 'N') { %>
                <a href="/purchase/delete/<%=list[i].purchase_id%>" onclick="return confirm('정말로 취소하시겠습니까?');">구매취소</a>
            <% } else { %>
                취소된 상품
            <% } %>
        </td>
        <% if (id === 'u') { %>
            <td>
                
                <a href="/purchase/purchase/update/<%=list[i].purchase_id%>">수정</a>
            </td>
            <td>
                <a href="/purchase/purchase/delete/<%=list[i].purchase_id%>" onclick="return confirm('정말로 삭제하시겠습니까?');">삭제</a>
            </td>
        <% } %>
    </tr>
    <% i+=1; } %>
</table>
