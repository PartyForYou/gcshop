<div class="container">	
    <h2>코드 입력</h2>
    <form action="<%= code_tbl.main_id ? '/code/update_process' : '/code/create_process' %>" method="post">
        <% if (code_tbl.main_id) { %>
			<input type = "hidden" name = "main_id" value="<%= code_tbl.main_id %>">
			<input type = "hidden" name = "sub_id" value="<%= code_tbl.sub_id %>">
            <div class="mb-3">
                <label class="form-label" for="id">대분류명</label> 
                <input class="form-control" type="text" name="main_name" style="width:300px;" value="<%= code_tbl.main_name %>" />
            </div>
            <div class="mb-3">
                <label class="form-label" for="id">소분류명</label> 
                <input class="form-control" type="text" name="sub_name" style="width:300px;" value="<%= code_tbl.sub_name %>" />
            </div>
            <div class="mb-3">
                <label class="form-label" for="id">시작일</label> 
                <input class="form-control" type="text" name="start" id="start" style="width:300px;" value="<%= code_tbl.start %>" />
            </div>
            <div class="mb-3">
                <label class="form-label" for="id">종료일</label> 
                <input class="form-control" type="text" name="end" id="end" style="width:300px;" value="<%= code_tbl.end %>" />
            </div>
            <input type="hidden" name="operation" value="update">
        <% } else { %>
            <div class="mb-3">
                <label class="form-label" for="id">대분류</label> 
                <input class="form-control" type="text" name="main_id" placeholder="0000" style="width:300px;" value="<%= code_tbl ? code_tbl.main_id : '' %>"/>
            </div>
            <div class="mb-3">
                <label class="form-label" for="id">대분류명</label> 
                <input class="form-control" type="text" name="main_name" style="width:300px;" value="<%= code_tbl ? code_tbl.main_name : '' %>" />
            </div>
            <div class="mb-3">
                <label class="form-label" for="id">소분류</label> 
                <input class="form-control" type="text" name="sub_id" style="width:300px;" value="<%= code_tbl ? code_tbl.sub_id : '' %>" />
            </div>
            <div class="mb-3">
                <label class="form-label" for="id">소분류명</label> 
                <input class="form-control" type="text" name="sub_name" style="width:300px;" value="<%= code_tbl ? code_tbl.sub_name : '' %>" />
            </div>
            <div class="mb-3">
                <label class="form-label" for="id">시작일</label> 
                <input class="form-control" type="text" name="start" id="start" style="width:300px;" value="<%= code_tbl ? code_tbl.start : '' %>" />
            </div>
            <div class="mb-3">
                <label class="form-label" for="id">종료일</label> 
                <input class="form-control" type="text" name="end" id="end" style="width:300px;" value="<%= code_tbl ? code_tbl.end : '' %>" />
            </div>
            <input type="hidden" name="operation" value="create">
        <% } %>
        <button class="btn btn-outline-primary btn-sm" type="submit">입력</button>
    </form>
</div>